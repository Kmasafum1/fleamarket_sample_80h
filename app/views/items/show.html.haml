%body
  .header
    .headerInner
      .headerInner__main
        .icon
          = link_to root_path do
            = image_tag ("logo.png")
        .searchBox
          = form_with(url: item_path, local: true, method: :get, class: "form") do |form|
            = form.text_field :keyword, placeholder: "キーワードから探す", class: "searchBox-input"
            = button_tag type: 'submit', class: 'search-btn' do
              %i.fas.fa-search
      .headerInner__nav
        %ul.leftTag
          %li.leftTag1
            = link_to "" do
              カテゴリー
          %li.leftTag2
            = link_to "" do
              ブランド     
        %ul.rightTag
          -if user_signed_in? 
            %li.rightTag1
              = link_to "マイページ", users_path
            %li.rightTag2
              = link_to "ログアウト", destroy_user_session_path, method: :delete
          -else     
            %li.rightTag1
              = link_to new_user_session_path do
                ログイン
            %li.rightTag2
              = link_to new_user_registration_path do
                新規会員登録
  .items-show-main
    .items-show-wrapper
      .items-show-contents
        .items-show-contents__topContent
          .items-show-itemBox
            .items-show-itemBox__name
              = @item.name
            .items-show-itemBox__pic
              = image_tag (@item.item_images.first.image.url);
            .items-show-itemBox__price
              %span
              ￥
              = @item.price.to_s(:delimited) 
              .items-show-itemBox__price__tax-shipfee
                %span
                  (税込)
                %span
                  送料込み
            - if user_signed_in? && current_user.id == @item.seller_id
              .l-single-container
                .listing-item-change-box
                  = link_to "商品の編集", edit_item_path, class: "items-show-itemBox__btn"
                  -# %p.text-center 
                  -# or
                  = link_to "この商品を削除する", item_path, method: :delete, data: { confirm: '【確認】削除すると二度と復活できません。本当に削除しますか？' }, class: "items-show-itemBox__btn"
            - elsif @item.buyer_id.present? 
              .items-show-itemBox__btn-grey 売り切れました
            - elsif current_user.blank?
              = link_to "購入画面に進む", new_user_session_path, data: { confirm: '【確認】購入はログインが必要です。移動しますか？' }, class: "items-show-itemBox__btn"
            - elsif current_user.card.present?
              = link_to "購入画面に進む", item_buyers_path(@item.id), class: "items-show-itemBox__btn"
            - else current_user.card.blank?
              = link_to "購入画面に進む", new_card_path, data: { confirm: '【確認】クレジットカード登録が必要です。登録画面に移動しますか？' }, class: "items-show-itemBox__btn"    
            .items-show-details
              = @item.name
            .items-show-table
              %table
                %tbody
                  %tr
                    %th
                      出品者
                    %td
                      = @item.seller.nickname
                  %tr    
                    %th
                      カテゴリー
                    %td
                      =link_to @category.find(@item.category_id).parent.parent.name
                      %br
                      =link_to @category.find(@item.category_id).parent.name
                      %br
                      =link_to @category.find(@item.category_id).name
                  %tr  
                    %th
                      商品の状態
                    %td
                      = @item.condition
                  %tr    
                    %th
                      配送料の負担
                    %td
                      = @item.delivery_cost
                  %tr    
                    %th
                      発送元の地域
                    %td
                      = @item.sipping_area
                  %tr    
                    %th
                      発送日の目安
                    %td
                      = @item.sipping_days
            .optionalBtn
              = link_to "/" do
                %i.fa.fa-flag
                不適切な商品の通報          
          -# .items-show-link
          -#   %ul.links
          -#     %li
          -#       - if @item.previous.present?
          -#         = link_to items_path(@item.previous.id), class: 'link' do
          -#           %i.fa.fa-angle-left
          -#           前の商品
          -#     %li
          -#       = link_to "#" do
          -#         後の商品
          -#         %i.fa.fa-angle-right                     
  .footer
    %ul.footerContents
      %li.content
        %h2.content__top FURIMAについて
        %ul
          %li
            = link_to "#" do
              会社概要(運営会社)
          %li
            = link_to "#" do
              プライバシーポリシー
          %li
            = link_to "#" do
              FURIMA利用規約
          %li
            = link_to "#" do
              ポイントに関する特約
      %li.content
        %h2.content__top FURIMAを見る
        %ul
          %li
            = link_to "#" do
              カテゴリー一覧
          %li
            = link_to "#" do
              ブランド一覧
      %li.content
        %h2.content__top ヘルプ&ガイド
        %ul
          %li
            = link_to "#" do
              FURIMAガイド
          %li
            = link_to "#" do
              FURIMAロゴ利用ガイドライン
          %li
            = link_to "#"do
              お知らせ
    %div.footer__logo
      = link_to "#" do
        = image_tag ("logo-white.png")
      %p.footer__copyright
        &copy; FURIMA

  = render partial: 'layouts/exhibition'  
