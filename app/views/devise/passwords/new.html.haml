%h2 パスワードをお忘れの方
%div.fillingform
  = form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :post }) do |f|
    = render "devise/shared/error_messages", resource: resource
    %div.single-form
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"  
      .actions
        = f.submit "Reset password"
      = render "devise/shared/links"
